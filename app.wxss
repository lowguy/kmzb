/**app.wxss**/
@import 'weui.wxss';
.container {
  height: 100%;
} 
.menu-list{
    width: 13.5rem;
    border-bottom: 1px solid #cff3f1;
    margin: 0 auto;
}
.menu-link {
    display:block;
    margin-bottom:1px;
    font-size:16px;
    color:#3DAEB6;
    line-height:32px;
    text-align:center;

}
.navigator-hover {
    color:blue;
}
swiper{height: 260pt;}
.menu-show{ 
 transform: rotate(0deg) scale(1) translate(75%,0%);  
 -webkit-transform: rotate(0deg) scale(1) translate(75%,0%);  
}
.menu{
  width:15pt;
  height:15pt;
}
.weui-footer{
  margin-bottom: 35pt;
}
.slide-image{width:100%;height: 260pt;}
.clear{clear: both;}
.footer-menu{
  display: flex;
  position: fixed;
  bottom: 0;
  height: 35pt;
  line-height: 35pt;
  font-size: 10pt;
  color: #202020;
  width: 100%;
  background-color: #e7e7e7;
}
.footer-menu-item{
  flex: 1;
  text-align: center;
}
.footer-menu-item.active{
  background-color: #b0dfe5;
}
