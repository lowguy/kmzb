/* pages/feedback/index.wxss */
.colorbdf {
  background-color: #b0dfe5;
}
.weui-search-bar__label,.weui-search-bar__form{
  border-radius: 0;
  border: 0;
  color: #fff;
}
.section {
  width: 94%;
  margin: 15px auto;
  
}
textarea{
  width: 100%;
  font-size: 14px;
  padding: 15px 0;
  text-indent: 12px;
  border: 1px solid #b0dfe5;
  border-radius:3px; 
  min-height: 160px;
}
input{
  width: 100%;
  height: 35px;
  font-size: 14px;
  text-indent: 12px;
  line-height: 35px;
  border: 1px solid #b0dfe5;
  border-radius:3px; 
}
button[type="primary"]{
  background-color: #b0dfe5;
}